<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="aakash.example.com.doctorlocator.EntryActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <android.support.v7.widget.CardView
        android:id="@+id/docReg"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3E0"
            android:fontFamily="serif"
            android:padding="16dp"
            android:text="Doctor\nRegistration"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_marginRight="72dp"
        android:layout_marginLeft="72dp"
        android:id="@+id/docLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_below="@+id/docReg"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3F2FD"
            android:fontFamily="serif"
            android:padding="16dp"
            android:text="Doctor\nLogin"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/user"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_below="@+id/docLogin"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F3E5F5"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="User Entry"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="* No need to signIn for the User"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/user"
        android:fontFamily="casual"
        android:text="Meet Our Team"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/team"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/team"
        android:layout_toRightOf="@+id/team1"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
